@model SistemaDeAsistenciaLogistica.Core.Domain.Producto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
           Precio Unidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
        <dt class = "col-sm-2">
           Material
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMaterialNavigation.NombreMaterial)
        </dd>
        <dt class = "col-sm-2">
           Tipo Producto 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoProductoNavigation.NombreProducto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdProducto">Editar</a> |
    <a asp-action="Index">Atrás</a>
</div>
