@model IEnumerable<SistemaDeAsistenciaLogistica.Core.Domain.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMaterialNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoProductoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMaterialNavigation.IdMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.IdTipoProducto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProducto"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdProducto"><i class="fas fa-info"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdProducto"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
