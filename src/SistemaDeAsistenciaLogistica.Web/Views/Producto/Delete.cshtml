@model SistemaDeAsistenciaLogistica.Core.Domain.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere eliminar esto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
           Precio Unidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
        <dt class = "col-sm-2">
            Material
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMaterialNavigation.NombreMaterial)
        </dd class>
        <dt class = "col-sm-2">
            Tipo Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoProductoNavigation.NombreProducto)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Guardar" class="btn btn-danger" /> |
        <a asp-action="Index">Atrás</a>
    </form>
</div>
