@model SistemaDeAsistenciaLogistica.Core.Domain.ReciboPago

@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label">N° Pedido</label>
                <select asp-for="IdPedido" class ="form-control" asp-items="ViewBag.IdPedido"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
                <a asp-action="Index"><i class="icon ion-ios-undo"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}