@model SistemaDeAsistenciaLogistica.Core.Domain.ReciboPago

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

        <form asp-action="Edit" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReciboPago" />
            <div class="form-group-edit-a">
                <label asp-for="IdPedido" class="control-label"><b>Recibo de Pago</b></label>
                <select asp-for="IdPedido" class="form-control" asp-items="ViewBag.IdPedido"></select>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            <div class="form-group-edit">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index"><i class="icon ion-ios-undo"></i></a>
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
