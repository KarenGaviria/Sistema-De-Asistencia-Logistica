@model SistemaDeAsistenciaLogistica.Core.Domain.Pedido

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere eliminar esto?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de pedido 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPedido)
        </dd>
        <dt class = "col-sm-2">
           Lugar Entrega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LugarEntrega)
        </dd>
        <dt class = "col-sm-2">
            Barrio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdBarrioNavigation.NombreBarrio)
        </dd class>
        <dt class = "col-sm-2">
           No. Cotización
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCotizacionNavigation.IdCotizacion)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Atrás</a>
    </form>
</div>
